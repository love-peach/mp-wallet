.custom-auth-step-million {
  position: relative;
  margin-top: 10rpx;
  margin-bottom: 40rpx;
  margin: 10rpx 50rpx 50rpx;
}
.step-result-million {
  text-align: right;
  font-size: 36rpx;
  color: #FF9600;
  font-weight: bolder;
}
.step-result-million:after {
  content: 'å…ƒ';
  font-size: 24rpx;
  font-weight: normal;
}
.step-list-million {
  position: relative;
  display: flex;
  justify-content: space-between;
}
.step-item-million {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.step-item-million-img {
  width: 36rpx;
  height: 36rpx;
  padding: 8rpx;
  background-color: #fff;
  border-radius: 40rpx;
  border: 3rpx solid #4CA6FF;
}
.step-item-million-text {
  margin-top: 10rpx;
  font-size: 26rpx;
}
.step-bar-outer {
  position: absolute;
  top: 72rpx;
  left: 28rpx;
  right: 5rpx;
  height: 20rpx;
  border-radius: 20rpx;
  background-color: RGBA(76, 166, 255, .4);
}
.step-bar-inner {
  height: 100%;
  border-radius: 20rpx;
  background-color: RGBA(76, 166, 255, 1);
}
